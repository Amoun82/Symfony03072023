{% extends "base.html.twig" %}

{% block title %}
    {% if editMode %}
			Modifier article
		{% else %}
            Ajouter article
		{% endif %}
{% endblock %}

{% block body %}
	<h1 class="text-center my-4">
		{% if editMode %}
			Modifier un article
		{% else %}
			Ajouter un article
		{% endif %}
	</h1>

	<div class="container">
		{{ form_start(form) }}
		{{ form_row(form.title , { 
                label: 'Titre',
                attr: {
                    placeholder: "titre de l'article"
                }
            }) }}

		{{ form_row(form.image) }}
		{{ form_row(form.content , {
                label: "Contenu"
            }) }}

		<button class="btn btn-primary" type="submit">envoyer</button>

		{{ form_end(form) }}
	</div>
{% endblock %}
